<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/transactionContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:context="com.smartcheckout.poc.activity.CartActivity">

        <TextView
            android:id="@+id/storeDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:text="Store 1" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storeDetails"/>

        <FrameLayout
            android:id="@+id/listContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/storeDetails"
            tools:layout_editor_absoluteX="8dp">

            <ListView
                android:id="@+id/cartList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_photo_camera_black_24dp"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            tools:layout_editor_absoluteX="344dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            tools:layout_editor_absoluteX="0dp" />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/paymentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info"
            app:layout_constraintBottom_toBottomOf="@+id/totalAmount"
            app:layout_constraintTop_toTopOf="@+id/totalAmount"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/dollarSymbol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintBottom_toBottomOf="@+id/paymentMethod"
            app:layout_constraintTop_toTopOf="@+id/paymentMethod"
            app:layout_constraintEnd_toStartOf="@+id/totalAmount"
            android:layout_marginEnd="0dp" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="45"
            app:layout_constraintTop_toTopOf="@+id/dollarSymbol1"
            app:layout_constraintBottom_toBottomOf="@+id/dollarSymbol1"
            app:layout_constraintEnd_toStartOf="@+id/details"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintLeft_toRightOf="@+id/savingLabel"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/savingLabel"
            android:layout_marginStart="8dp" />


        <TextView
            android:id="@+id/saving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintLeft_toRightOf="@+id/totalLabel"
            app:layout_constraintBottom_toBottomOf="@+id/totalLabel" />

        <TextView
            android:id="@+id/savingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You save"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintLeft_toLeftOf="@+id/dollarSymbol1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dollarSymbol1" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/paymentMethod"
            android:layout_width="147dp"
            android:layout_height="39dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/paymentMethodImage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mastercard"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/paymentInfoHidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="****"
                app:layout_constraintBottom_toBottomOf="@+id/paymentMethodImage"
                app:layout_constraintLeft_toRightOf="@+id/paymentMethodImage"
                app:layout_constraintTop_toTopOf="@+id/paymentMethodImage" />

            <TextView
                android:id="@+id/paymentInfoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/paymentInfoHidden"
                app:layout_constraintLeft_toRightOf="@+id/paymentInfoHidden"
                app:layout_constraintTop_toTopOf="@+id/paymentInfoHidden"
                tools:text="9382"
                android:layout_marginStart="8dp" />
        </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/payButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/savingLabel"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </android.support.constraint.ConstraintLayout>
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</FrameLayout>