<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paymentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/dollarSymbol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toRightOf="@+id/paymentMethod"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/paymentMethod"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/paymentMethod"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.4" />

    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="45"
        app:layout_constraintTop_toTopOf="@+id/dollarSymbol1"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/dollarSymbol1"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/dollarSymbol1"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintLeft_toRightOf="@+id/savingLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/savingLabel"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintLeft_toRightOf="@+id/totalLabel"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/totalLabel"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/savingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You save"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/dollarSymbol1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dollarSymbol1" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/paymentMethod"
        android:layout_width="147dp"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/paymentMethodImage"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mastercard"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/paymentInfoHidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="****"
            app:layout_constraintBottom_toBottomOf="@+id/paymentMethodImage"
            app:layout_constraintLeft_toRightOf="@+id/paymentMethodImage"
            app:layout_constraintTop_toTopOf="@+id/paymentMethodImage" />

        <TextView
            android:id="@+id/paymentInfoNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/paymentInfoHidden"
            app:layout_constraintLeft_toRightOf="@+id/paymentInfoHidden"
            app:layout_constraintTop_toTopOf="@+id/paymentInfoHidden"
            tools:text="9382"
            android:layout_marginStart="8dp" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/payButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/savingLabel"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Info"
        app:layout_constraintBottom_toBottomOf="@+id/totalAmount"
        app:layout_constraintTop_toTopOf="@+id/totalAmount"
        app:layout_constraintLeft_toRightOf="@+id/totalAmount"
        android:layout_marginLeft="16dp" />


</android.support.constraint.ConstraintLayout>