<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartcheckout.activities.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/storeDetails">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="3">
            <TextView
                android:text="WALMART"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fffafa"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/brandName" />
            <TextView
                android:text="3055 Loughborough Dr, Merced, CA 95348"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brandName"
                android:textColor="#fffafa"
                android:textSize="16sp"
                android:id="@+id/brandLocation" />
        </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/images"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView4" />
    </LinearLayout>
    <TextView

        android:text="Start scanning the products you want to buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:id="@+id/main_area" />
    <Button
        android:text="@string/button_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_scan"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:onClick="scanBarCode"/>

</LinearLayout>
